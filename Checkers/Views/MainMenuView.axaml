<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Checkers.ViewModels"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="500"
             x:Class="Checkers.Views.MainMenuView"
             x:DataType="viewModels:MainMenuViewModel">

    <UserControl.Styles>
        <Style Selector="Button.menu-button">
            <Setter Property="FontSize" Value="22" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Padding" Value="60,15" />
            <Setter Property="Margin" Value="0,10" />
            <Setter Property="Background" Value="#3F51B5" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="CornerRadius" Value="8" />
        </Style>
        <Style Selector="Button.menu-button:pointerover">
            <Setter Property="Background" Value="#303F9F" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="RenderTransform" Value="scale(1.05)" />
        </Style>
        <Style Selector="Button.menu-button:pressed">
            <Setter Property="Background" Value="#1A237E" />
            <Setter Property="RenderTransform" Value="scale(0.98)" />
        </Style>
    </UserControl.Styles>

    <Grid RowDefinitions="*,Auto,*">
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="/Assets/Pieces/RedKing.png" Width="120" Height="120" Margin="0,0,0,30" />

            <Button Classes="menu-button"
                    Command="{Binding LoadGame}">
                PLAY GAME
            </Button>

            <!-- These buttons would need corresponding properties/commands in your ViewModel -->
            <Button Classes="menu-button"
                    Background="#4CAF50">
                TUTORIAL
            </Button>

            <Button Classes="menu-button"
                    Background="#FF9800">
                SETTINGS
            </Button>

            <TextBlock Text="v1.0.0"
                       HorizontalAlignment="Center"
                       Foreground="#757575"
                       Margin="0,30,0,0" />
        </StackPanel>
    </Grid>
</UserControl>